<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="admin_form_container">
    <div class="admin_form_card">
      <h2>Log in</h2>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'admin_form_input' %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'admin_form_input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "admin_form_button"%>
      </div>
      <%= render "admins/shared/links" %>
    </div>
  </div>
<% end %>
